@model DrugStore.ViewModels.LoginVM

<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse(document);
        $('#btnForgot').click(function () {
            //$('#modal-container').modal('hide');
        });
    });
</script>

<div class="modal-body">
    @using (Html.BeginForm("ForgotPassword", "Home", Model, FormMethod.Post, htmlAttributes: new { autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        @*<div class="container">*@
        @*<div class="form-group">*@
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(a => a.UserName, new { @class = "control-label" })
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class="input-group">
                    <span class="input-group-addon"><i style="color: #3b5997" class="glyphicon glyphicon-wrench"></i></span>
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "control-label text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                <input type="submit" id="btnForgot" value="Forgot Password" class="btn btn-danger" />
            </div>
        </div>
        @*</div>*@
        @*</div>*@
    }
</div>
