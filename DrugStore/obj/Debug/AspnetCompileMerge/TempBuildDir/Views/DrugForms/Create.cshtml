@model DrugStore.ViewModels.DrugFormVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create - Drug Form</h2>
@using (Html.BeginForm("Create", "DrugForms", FormMethod.Post, htmlAttributes: new { autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">&nbsp;</div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row row-striped">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 text-right">
                            @Html.LabelFor(model => model.Name, "نوع العبوة", new { @class = "control-label" })
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            @Html.LabelFor(model => model.Name, "Form Name", new { @class = "control-label" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left">
                    <div class="input-group">
                        <span class="input-group-addon" style="width: 40px;">
                            <i style="color: #3b5997" class="fa fa-info-circle"></i>
                        </span>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row row-striped">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right">
                    @Html.ActionLink("Index", "Index", null, new { @class = "btn btn-danger btn-unified" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left">
                    <input type="submit" value="Create" class="btn btn-primary btn-unified" />
                </div>
            </div>
        </div>
    </div>
}
