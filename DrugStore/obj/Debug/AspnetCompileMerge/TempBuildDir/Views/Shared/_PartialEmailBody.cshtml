@model DrugStore.Model.Models.EmailLog

<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse(document);
        $('.dialogLink').click(function () {
            setTimeout(function () {
                $('#dialog-div-close').on('click', function () {
                    window.location.href = "/Emails";
                });
            }, 500);
        });
    });
</script>

<div class="modal-body">
    <div class="row">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
            @{
                var emailBody = MvcHtmlString.Create(Model.EmailBody);
            }
            @*@Html.TextAreaFor(m => emailBody, new { @class = "form-control", style = "width: 100%; height: 100%; margin: auto" })*@
            @MvcHtmlString.Create(Model.EmailBody)
        </div>
    </div>
</div>
