@using DrugStore.Model.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<DrugForm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.IsInRole("Admin");
}
<h2>Index - Drug Forms</h2>
@if (isAdmin)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
}
@using (Html.BeginForm("Index", "DrugForms", FormMethod.Get))
{
    <div class="form-group">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new
           {
               pageNumber,
               search = Request.QueryString["search"],
               sort = Request.QueryString["sort"]
           }))
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <b>Search: </b>
                @Html.TextBox("search", null,
                    new { @class = "form-control", style = "display: inline-block; width: 150px" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <input type="submit" value="Search" class="btn btn-primary" />
                @Html.ActionLink("Reset", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="form-group">
        <div class="row" style="background-color: #ccc;">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 text-right">
                <label class="control-label">
                    @Html.ActionLink("Form Name", "Index", new
               {
                   sort = ViewBag.SortByName,
                   search = Request.QueryString["search"]
               })
                </label>
                <br />
                <label class="control-label">نوع العبوة</label>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                &nbsp;
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label class="control-label">Action</label>
                <br />
                <label class="control-label">تغييرات</label>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="row row-striped">
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 text-right">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                    &nbsp;
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @if (isAdmin)
                    {
                        <div>
                            @Html.ActionLink(" ", "Edit", new { id = item.FormID },
                    new { id = item.FormID, @class = "btn btn-primary fa fa-edit", title = "Edit" })
                            |
                            @Html.ActionLink(" ", "Details", new { id = item.FormID },
                    new { id = item.FormID, @class = "btn btn-info fa fa-info-circle", title = "Details" })
                            |
                            @Html.ActionLink(" ", "Delete", new { id = item.FormID },
                    new { id = item.FormID, @class = "btn btn-danger fa fa-times", title = "Delete" })
                        </div>
                    }
                    else { }
                </div>
            </div>
        }
    </div>
</div>